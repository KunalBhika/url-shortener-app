<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Url Shortner</title>
  </head>
  <body>
    <h1>URL Shortner</h1>
    <div>
      <form action="/URL" method="post">
        <h4>Enter a URL to shorten :</h4>
        <input type="text" name="url" placeholder="https://example.com" />
        <button type="submit">Generate URL</button>
      </form>
    </div>
    <% if (locals.shortId) { %>
    <h4>
      Your shortened URL is :<a href="<%= locals.actualUrl %>"
        ><%= locals.shortId %></a
      >
    </h4>
    <% } %>

    <% if (locals.urls) { %>
      <table>
        <thead>
          <th>S. No</th>
          <th>ShortID</th>
          <th>Redirect</th>
          <th>Clicks</th>
        </thead>
        <tbody>
          <% urls.forEach((url, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= url.shortId %></td>
            <td><%= url.actualUrl %></td>
            <td><%= url.clicks %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>
  </body>
</html>
